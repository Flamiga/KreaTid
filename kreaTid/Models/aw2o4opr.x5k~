using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace kreaTid.Models
{
    public class BlogPost
    {
        public int BlogPostId { get; set; }

        public string BlogPostTitle { get; set; }

        public DateTime BlogPostDate { get; set; }

        public string BlogPostContent { get; set; } //Read only? 


        //constructor

        public BlogPost() { }

        public BlogPost(int blogId, string title, DateTime date, string content)
        {
            BlogId = blogId;
            Title = title;
            Date = date;
            Content = content;



        }
    }
}
